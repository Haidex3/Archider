/*------------------------------------------------------------------------------
 *  Theme import
-------------------------------------------------------------------------------*/
@theme "current-theme"

/*------------------------------------------------------------------------------
 *  General configuration
-------------------------------------------------------------------------------*/
configuration {
    font:            "FantasqueSansMono Nerd Font 10";
    show-icons:      true;
    icon-theme:      "Papirus";
    display-drun:    " ";
    drun-display-format: "{name}";
    disable-history: false;
    fullscreen:      false;
    hide-scrollbar:  true;
    sidebar-mode:    false;
    icon-size:       128;
}

/*------------------------------------------------------------------------------
 *  Import colors
-------------------------------------------------------------------------------*/
@import "styles/colors.rasi"

/*------------------------------------------------------------------------------
 *  Window settings
-------------------------------------------------------------------------------*/
window {
    transparency:    "real";
    background-color: transparent;
    text-color:      @foreground;
    border:          0.25%;
    border-color:    @border;
    border-radius:   14px;
    height:          47%;
    width:           46%;
    location:        center;
    x-offset:        0;
    y-offset:        0;
}

/*------------------------------------------------------------------------------
 *  Prompt configuration
-------------------------------------------------------------------------------*/
prompt {
    enabled:          true;
    padding:          0% 1% 0% 0%;
    background-color: transparent;
    text-color:       @accent;
    font:             "FantasqueSansMono Nerd Font 12";
}

entry {
    background-color: transparent;
    text-color:       @foreground;
    placeholder-color:@fg2;
    expand:           true;
    horizontal-align: 0;
    placeholder:      "Search applications…";
    padding:          0.3% 0% 0.3% 0%;
    blink:            true;
}

/*------------------------------------------------------------------------------
 *  Inputbar
-------------------------------------------------------------------------------*/
inputbar {
    children:         [ prompt, entry ];
    background-color: @background-alt;
    text-color:       @foreground;
    expand:           false;
    border:           0%;
    border-radius:    10px;
    margin:           0% 0% 1% 0%;
    padding:          1.2%;
    position:         center;
}

/*------------------------------------------------------------------------------
 *  Listview
-------------------------------------------------------------------------------*/
listview {
    background-color: transparent;
    columns:          3;
    spacing:          1.5%;
    cycle:            false;
    dynamic:          true;
    layout:           vertical;
}

/*------------------------------------------------------------------------------
 *  Main container
-------------------------------------------------------------------------------*/
mainbox {
    background-color: transparent;
    children:         [ inputbar, listview ];
    spacing:          2%;
    padding:          2.5% 2.5% 1.5% 2.5%;
}

/*------------------------------------------------------------------------------
 *  Elements (apps/icons)
-------------------------------------------------------------------------------*/
element {
    background-color: transparent;
    text-color:       @foreground;
    orientation:      vertical;
    border-radius:    5px;
    padding:          0% 1% 0% 1%;
}

element-icon {
    background-color: transparent;
    size:             15em;
    padding:          0px;
}

element-text {
    expand:           false;
    horizontal-align: 0.5;
    vertical-align:   0.5;
    margin:           4px 6px 0px 6px;
}

/*------------------------------------------------------------------------------
 *  Element states
-------------------------------------------------------------------------------*/
element normal.urgent,
element alternate.urgent {
    background-color: @urgent;
    text-color:       @bg0;
    border-radius:    5px;
}

element normal.active,
element alternate.active {
    background-color: @background-alt;
    text-color:       @foreground;
}

element selected {
    background-color: @accent;
    text-color:       @bg0;
    border:           0%;
    border-radius:    5px;
}

element selected.urgent {
    background-color: @urgent;
    text-color:       @bg0;
}

element selected.active {
    background-color: @accent;
    color:            @bg0;
}
