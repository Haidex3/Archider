{
  "workbench.colorTheme": "light-drakula",

  "editor.semanticHighlighting.enabled": true,

  "workbench.colorCustomizations": {
    "breadcrumb.foreground": "#2B2B3C",
    "editor.background": "#F6F6FB",
    "editor.foreground": "#2B2B3C",
    "editorCursor.foreground": "#BD93F9",

    "editor.selectionBackground": "#E6DCFF",
    "editor.inactiveSelectionBackground": "#EEEFF6",
    "editor.lineHighlightBackground": "#F1F1FA",

    "editor.wordHighlightBackground": "#E6DCFF",
    "editor.wordHighlightStrongBackground": "#DDDDEA",

    "editorLineNumber.foreground": "#9A9AB0",
    "editorLineNumber.activeForeground": "#BD93F9",

    "activityBar.background": "#F6F6FB",
    "activityBar.foreground": "#2B2B3C",
    "activityBarBadge.background": "#FF79C6",
    "activityBarBadge.foreground": "#FFFFFF",

    "sideBar.background": "#F6F6FB",
    "sideBar.foreground": "#5F637A",
    "sideBarSectionHeader.background": "#F6F6FB",
    "sideBarSectionHeader.foreground": "#BD93F9",

    "statusBar.background": "#F6F6FB",
    "statusBar.foreground": "#2B2B3C",
    "statusBar.noFolderBackground": "#F6F6FB",
    "statusBar.debuggingBackground": "#FF79C6",

    "titleBar.activeBackground": "#F6F6FB",
    "titleBar.activeForeground": "#2B2B3C",
    "titleBar.inactiveBackground": "#EEEFF6",
    "titleBar.inactiveForeground": "#9A9AB0",

    "panel.background": "#F6F6FB",
    "panel.border": "#DDDDEA",
    "panelTitle.activeForeground": "#BD93F9",
    "panelTitle.inactiveForeground": "#9A9AB0",

    "tab.activeBackground": "#F6F6FB",
    "tab.activeForeground": "#2B2B3C",
    "tab.inactiveBackground": "#F1F1FA",
    "tab.inactiveForeground": "#5F637A",
    "tab.border": "#DDDDEA",

    "input.background": "#FFFFFF",
    "input.foreground": "#2B2B3C",
    "input.border": "#DDDDEA",

    "list.activeSelectionBackground": "#E6DCFF",
    "list.activeSelectionForeground": "#BD93F9",
    "list.hoverBackground": "#F1F1FA",
    "list.focusBackground": "#E6DCFF"
  },

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "support.type.property-name.json",
          "entity.name.tag.json"
        ],
        "settings": {
          "foreground": "#2B2B3C"
        }
      },
      {
        "scope": [
          "string.json"
        ],
        "settings": {
          "foreground": "#2f6e7c"
        }
      },
      {
        "scope": [
          "comment",
          "punctuation.definition.comment"
        ],
        "settings": {
          "foreground": "#2f8814"
        }
      },
      {
        "scope": [
          "string",
          "string.quoted",
          "string.template"
        ],
        "settings": {
          "foreground": "#18428b"
        }
      },
      {
        "scope": [
          "keyword",
          "storage",
          "storage.type"
        ],
        "settings": {
          "foreground": "#BD93F9"
        }
      },
      {
        "scope": [
          "entity.name.type",
          "support.type",
          "entity.name.class",
          "support.class"
        ],
        "settings": {
          "foreground": "#FF79C6"
        }
      },
      {
        "scope": [
          "entity.name.function",
          "support.function"
        ],
        "settings": {
          "foreground": "#BD93F9"
        }
      },
      {
        "scope": [
          "variable",
          "variable.other",
          "variable.parameter"
        ],
        "settings": {
          "foreground": "#18428b"
        }
      },
      {
        "scope": [
          "constant",
          "constant.language",
          "constant.numeric"
        ],
        "settings": {
          "foreground": "#378496"
        }
      },
      {
        "scope": [
          "punctuation",
          "meta.brace"
        ],
        "settings": {
          "foreground": "#9A9AB0"
        }
      },
      {
        "scope": [
            "meta.selector.css",
            "entity.other.attribute-name.css",
            "support.type.property-name.css",
            "keyword.control.pseudo-class.css"
        ],
        "settings": {
            "foreground": "#18428b"   
        }
        }
    ]
  },

  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "rules": {
      "property": "#2B2B3C",
      "propertyKey": "#2B2B3C",

      "type": "#FF79C6",
      "class": "#FF79C6",
      "interface": "#FF79C6",
      "enum": "#FF79C6",

      "function": "#BD93F9",
      "method": "#BD93F9",

      "variable": "#18428b",
      "parameter": "#5F637A",

      "property.readonly": "#2B2B3C",

      "keyword": "#BD93F9",
      "string": "#18428b",
      "number": "4f8591"
    }
  }
}
